$tab-namespace = 'tab'
$tab-border-size = 3px
$tab-border-color = 'primary'

/* Helpers */
tab-border($visible = true)
  $color = $visible ? -color($tab-border-color) : transparent
  box-shadow inset 0 $tab-border-size*-1 0 0 $color

/* Includes */
tab-item()
  //

tab-link()
  _typography('h4', false)
  _padding-horizontal('3')
  _padding-vertical('2')
  _color('font', 'light')
  tab-border(false)
  text-align center
  text-decoration none

tab-link-active()
  _color('font', 'dark')
  tab-border()
  
tab-link-span()
  //

tab-custom()
  &.{$tab-namespace}-line
    li a
      tab-border(false)
    li a.active span
      tab-border()
      
  &.{$tab-namespace}-bottom-line
    li a
      padding 0
      _padding-horizontal('3')
      tab-border(false)
    li a span
      _padding-vertical('2')
    li a.active span
      tab-border()

/* Tab class */
.{$tab-namespace}
  display flex
  overflow hidden
  overflow-x auto
  
  li
    tab-item()
  
  li a
    display block
    tab-link()
    &.active
      tab-link-active()
      
    &:not(.active):hover
      _color('font', 'dark')
  
  li a span
    display block
    tab-link-span()
      
  &::-webkit-scrollbar
    display none
    
  tab-custom()

  /* Modifiers */
  &.{$tab-namespace}-full
    li
      flex 1 
      
  &.{$tab-namespace}-right
    justify-content flex-end
  
  &.{$tab-namespace}-center
    justify-content center
